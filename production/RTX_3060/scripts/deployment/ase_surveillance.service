[Unit]
Description=ASE Restaurant Surveillance Service v3.0.0
Documentation=https://github.com/JeremyDong22/ASEOfSmartICE
After=network.target

[Service]
Type=forking
User=smartahc
Group=smartahc
WorkingDirectory=/home/smartahc/smartice/ASEOfSmartICE/production/RTX_3060
ExecStart=/home/smartahc/smartice/ASEOfSmartICE/production/RTX_3060/start.sh --daemon
ExecStop=/home/smartahc/smartice/ASEOfSmartICE/production/RTX_3060/start.sh --stop
PIDFile=/home/smartahc/smartice/ASEOfSmartICE/production/RTX_3060/surveillance_service.pid
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

# Environment
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"

# Resource limits
LimitNOFILE=65536
Nice=-5

# Logging
SyslogIdentifier=ase_surveillance

[Install]
WantedBy=multi-user.target
